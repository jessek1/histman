{
  "manifest_version": 3,
  "name": "HistMan - History Manager",
  "version": "1.0.0",
  "description": "Auto-delete browser history matching your domains and keywords. Optional password and 2FA protection.",
  "permissions": [
    "history",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HistMan - Manage History Filters",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "privacy.html"
}
